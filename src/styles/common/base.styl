body {
  line-height: 1.5;
}
#app {
  height: 100%;
  font-size: 14px;
  color: #fff;
  // 基础样式库
  .screen-wrapper {
    .v-header {
      position: relative;
      width: 100%;
      height: 96px;
      background: url("../images/header-bg.png") no-repeat 0 0;
      .label {
        position: absolute;
        top: 20px;
        left: 50%;
        margin-left: -420px;
        letter-spacing: 25px;
        font-weight: 600;
        height: 60px;
        line-height: 60px;
        width: 840px;
        text-align: center;
        font-size: 36px;
        color: #4bdbff;
      }
      .btn {
        position: absolute;
        top: 30px;
        left: 524px;
        a {
          display: inline-block;
          vertical-align: middle;
          text-decoration: none;
          background: url("../images/menubg1-1.png") no-repeat 0 0;
          width: 255px;
          height: 54px;
          line-height: 54px;
          text-align: center;
          font-size: 17px;
          color: #00ccff;
          cursor: pointer;
          &.active {
            color: #ffffff;
            background: url("../images/menubg1-2.png") no-repeat 0 0;
          }
          &:nth-child(4){
            position relative
            left 1260px
          }
          &:nth-child(5){
            position relative
            left 1260px
          }
        }
      }
      //add
      .date {
        position: absolute;
        top: 54px;
        //add
        //right: 624px;
        right: 345px;
        font-size: 18px;
        color: #0278b9;
      }
    }
    .v-block {
      position: absolute;
      padding: 10px 20px;
      border: 1px solid #293f53;
      border-radius: 5px;
      box-shadow: 0 0 30px rgba(26, 58, 99, 0.5) inset;
      background-color: rgba(19, 33, 63, 0.2);
      margin-bottom: 20px;
      color: #8fa0cd;
      .header {
        padding: 8px;
        text-align: center;
        font-size: 18px;
        color: #d7edfd;
        font-weight: bold;
      }
      .angle {
        position: absolute;
        width: 8px;
        height: 8px;
        border-color: #15e9f2;
        border-style: solid;
        &.top-left {
          top: 0;
          left: 0;
          margin-top: -1px;
          margin-left: -1px;
          border-top-left-radius: 5px;
          border-top-width: 1px;
          border-left-width: 1px;
        }
        &.top-right {
          top: 0;
          right: 0;
          margin-top: -1px;
          margin-right: -1px;
          border-top-right-radius: 5px;
          border-top-width: 1px;
          border-right-width: 1px;
        }
        &.bottom-left {
          bottom: 0;
          left: 0;
          margin-bottom: -1px;
          margin-left: -1px;
          border-bottom-left-radius: 5px;
          border-bottom-width: 1px;
          border-left-width: 1px;
        }
        &.bottom-right {
          bottom: 0;
          right: 0;
          margin-bottom: -1px;
          margin-right: -1px;
          border-bottom-right-radius: 5px;
          border-bottom-width: 1px;
          border-right-width: 1px;
        }
      }
    }
    .v-full-block {
      transition: .2s;
    }
    .v-select {
      position: relative;
      display: block;
      padding: 0 5px;
      width: auto;
      cursor: pointer;
      .select {
        .iconfont {
          font-size: 18px;
          color: #00ccff;
          transition: .35s;
          transform: rotateZ(180deg);
          &.show {
            transform: rotateZ(0deg);
          }
        }
      }
      .options {
        position: absolute;
        right: 0;
        bottom: 0;
        transform: translateY(100%)
        width: 690px;
        padding: 20px 10px 10px 20px;
        background-color: #192648;
        z-index: 2000;
        .item {
          display: inline-block;
          background-color: #303b5a;
          font-size: 12px;
          color: #fff;
          font-weight: normal;
          text-align: center;
          line-height: 30px;
          width: 210px;
          margin: 0 10px 10px 0;
          &.active {
            background-color: #1985d2;
          }
        }
      }
    }
    .v-chart-bar {
      .item {
        margin-bottom: 2px;
        .index {
          width: 30px;
          padding-top: 12px;
        }
        .legend {
          font-size: 12px;
          padding-right: 60px;
        }
      }
    }
    .v-modal {
      background-color: #060c22;
      border: 1px solid #586ea2;
      border-radius: 5px;
      height: 100%;
      .top-header {
        position: absolute;
        top: 0;
        left: 50%;
        transform: translate(-50%, -50%)
        font-size: 20px;
        color: #fff;
        padding: 4px 20px;
        background-color: #00addd;
        border-radius: 19px;
        white-space: nowrap;
      }
      .content {
        overflow: hidden;
      }
      .icon-ios-close {
        position: absolute;
        top: 0;
        right: 0;
        font-size: 40px;
        cursor: pointer;
      }
      .angle {
        position: absolute;
        width: 10px;
        height: 10px;
        border-color: #15e9f2;
        border-style: solid;
        &.top-left {
          top: 0;
          left: 0;
          margin-top: -1px;
          margin-left: -1px;
          border-top-width: 1px;
          border-left-width: 1px;
        }
        &.top-right {
          top: 0;
          right: 0;
          margin-top: -1px;
          margin-right: -1px;
          border-top-width: 1px;
          border-right-width: 1px;
        }
        &.bottom-left {
          bottom: 0;
          left: 0;
          margin-bottom: -1px;
          margin-left: -1px;
          border-bottom-width: 1px;
          border-left-width: 1px;
        }
        &.bottom-right {
          bottom: 0;
          right: 0;
          margin-bottom: -1px;
          margin-right: -1px;
          border-bottom-width: 1px;
          border-right-width: 1px;
        }
      }
    }
  }
}

