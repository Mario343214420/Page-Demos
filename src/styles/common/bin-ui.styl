// table覆盖
.bin-table {
  background-color: rgba(7, 10, 32, 0.22);
  th, td {
    color: #fff;
    background-color: transparent;
  }
}
.bin-table-wrapper {
  border-top: 1px solid #181e3c;
  border-left: 1px solid #181e3c;
}
.bin-table:after, .bin-table:before {
  display: none;
}
.bin-table-border td, .bin-table-border th {
  border-right: 1px solid #181e3c;
  border-bottom: 1px solid #181e3c;
}
.bin-table-overflowX {
  overflow-x: hidden;
}
.bin-table-cell {
  padding: 4px 8px;
}
.bin-tooltip, .bin-tooltip-rel {
  display: block;
}

// 滚动条样式
.bin-scrollbar__bar.is-vertical {
  background-color: #283956;
}
.bin-scrollbar__thumb {
  background-color: #1985d2;
}

//  弹窗遮罩
.bin-modal-mask {
  background-color: rgba(12, 23, 40, 0.61);
}

//  抽屉覆盖
.bin-drawer-wrapper .drawer-box {
  background: #051425;
  .header {
    border-bottom: none;
    padding: 0;
    .recommend-header {
      position: relative;
      width: 1920px;
      height: 110px;
      line-height: 110px;
      font-size: 28px;
      color: #00ccff;
      background: url("../images/header.png") no-repeat 0 0;
      text-align: center;
      img {
        position: absolute;
        top: 26px;
        right: 4px;
      }
    }
  }
  .body {
    height: 100%;
    .recommend-content {
      width: 1700px;
      height: 767px;
      margin: 40px auto;
      .left {
        width: 280px;
        .item {
          background-color: #182338;
          color: #fff;
          font-size: 20px;
          padding: 25px 40px;
          margin-bottom: 10px;
          &.active {
            background-color: #1985d2;
          }
        }
      }
      .right {
        width: 1400px;
        .inner {
          width: 1350px;
          padding-bottom: 100px;
          background-color: #182338;
          .box {
            padding: 0 30px;
            > h2 {
              position: relative;
              line-height: 40px;
              padding: 30px 0 30px 40px;
              color: #ffffff;
              font-size: 20px;
              font-weight: normal;
              &:before {
                content: '';
                position: absolute;
                left: 10px;
                top: 44px;
                width: 14px;
                height: 14px;
                border-radius: 50%;
                background-color #00ccff;
              }
            }
            .section {
              font-size: 16px;
              color: #7181a6;
              line-height: 2em;
              padding: 0 50px 0 20px;
              p {
                text-indent: 2.5em;
              }
            }
            .img {
              width: 100%;
              text-align: center;
            }
          }
        }
      }
    }
  }
}
