#app
  background-color: #f6f6f6
  .main-wrapper
    width: 1200px
    margin: 0 auto
    padding-bottom: 20px
    .img-wrapper
      display block
      width: 100%
      padding-top: 20px
      img
        display block
        width: 100%
    .card
      width: 49%
      .title-bar
        display flex
        justify-content space-between
        border-bottom: 1px solid #d9d9d9
        line-height: 36px
        .title
          position relative
          font-size: 20px
          font-weight: 700
          color: #e22323
          &.can-click
            cursor pointer
            color #1a1a1a
            &.active
              color #e22323
          &::after
            position absolute
            left: 0
            bottom: -2px
            background-color: #e22323
            display block
            content: ''
            height 4px
            width: 100%
        .more
          a
            color: #a6a6a6;
    .content-board
      margin-top: 20px
      background-color: #fff
      padding 20px
      display flex
      justify-content space-between
      .card
        .card-content
          .link-item
            display flex
            color #3a3a3a
            border-bottom: 1px dashed #d9d9d9
            line-height: 40px
            transition color linear 0.4s
            &:hover
              color: #e22323
            .sketch
              flex: 1
              padding-right: 20px
            .time
              display block
              width: 100px
