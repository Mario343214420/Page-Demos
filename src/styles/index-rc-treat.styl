.bdrs4
  -webkit-border-radius: 4px
  -moz-border-radius: 4px
  border-radius: 4px
#app
  min-width 1000px
  padding: 15px
  background-color: #f5f5f5
  .divide
    width 100%
    .float-left
      float: left
    .float-right
      float: right
    .width-58percent
      width: 58%
    .width-40percent
      width: 40%
  .square
    @extend .bdrs4
    background-color: #fff
    padding-bottom: 10px
    margin-bottom: 20px
    select
      margin-top: 8px
      height: 30px
      width: 100%
    .filter-bar
      background-color: #f5f5f5
      padding: 5px 25px;
      .filter-select
        padding-right 20px
        display inline-block
        width: 120px
      .filter-label
        line-height: 48px
    .legend-bar
      .color-tip
        margin-left: 10px
        display inline-block
        height: 12px
        width: 12px
        -webkit-border-radius: 50%
        -moz-border-radius: 50%
        border-radius: 50%

    .square-title
      padding 10px 0 0
      i
        padding-left: 15px
        line-height: 40px
        border-left: 4px solid #2c8cf0
      .right-select
        float right
        margin-right: 20px
        width: 160px
    .square-chart
      padding 10px 25px
      display flex
      box-sizing border-box
      width: 100%
      justify-content space-between
      .pie-chart
        display inline-block
        width: 33%
        box-sizing border-box
        .chart-title
          text-align center
          font-size: 20px
        .x-center
          margin 0 auto
      .card-divide-30
        @extend .bdrs4
        width: 30%
      .card-divide-22
        @extend .bdrs4
        width: 22%
      .card-item
        height: 90px
        box-sizing border-box
        padding 16px 24px
        line-height: 28px
        .icon
          float left
          background-color: rgba(0,0,0,.1)
          -webkit-border-radius: 50%
          -moz-border-radius: 50%
          border-radius: 50%
          padding 10px
          img
            display block
            height: 40px
            width: auto
        .count
          float right
          position relative
          p
            text-align right
            color #fff
            &:first-child
              font-size: 14px
            &:last-child
              font-size: 24px
              line-height: 38px
          &::after
            content ''
            height: 1px
            width: 30px
            background-color: #fff
            position absolute
            right: 0
            top: 28px


    .square-inner
      width: 100%
      .chart-item
        width: 43%
        float: left
      .perch
        width: 2%
        height: 100%
        float left
      .grade-bar
        width: 10%
        float: left
        margin-top: 14px
        padding 4px 10px
        background-color: #f3f7fa
        p
          line-height: 29px
          text-align center
          border-bottom: 1px solid #d6d8d9
          &:last-child
            border-bottom: none
    .legend-bar
      text-align center

  .bin-table th
    height: 50px
  .bin-table td
    height: 46px
  .bin-table-wrapper
    border: none
  .bin-table:after
    width: 0
.bgc-blue-dark
  background-color: #679cfa
.bgc-blue-light
  background-color: #65b9f9
.bgc-orange
  background-color: #feaa6c
.bgc-green-light
  background-color: #5ae0c5
.bgc-green-dark
  background-color: #6bdbe6
.bgc-gray
  background-color: #8ba0bf

.clear-both:after
  content: "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;

.clear-both
  zoom: 1;


