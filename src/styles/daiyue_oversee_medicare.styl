html, body
  width: 100%
  height: 100%
#app
  width: 100%
  height: 100%
  background-image: url(../images/daiyue_oversee_medicare/bg.jpg)
  background-repeat: no-repeat
  background-size: 100% 100%;
  position relative
  overflow hidden
  .title
    position absolute
    left: 10%
    top: 10%
  .center
    position absolute
    left: 50%
    top: 50%
    transform translate(-50%, -50%)
    height: 900px
    width: 1400px
    margin 0 auto
    overflow hidden
    z-index 2
    //background-image: url(../images/daiyue_oversee_medicare/mid.png)
    //background-repeat: no-repeat
    //background-position: center bottom
    .inner
      position relative
      width: 100%
      height: 100%
      overflow hidden
      z-index 2
      .center-img
        position absolute
        top: 50%
        left: 50%
        transform translate(-50%, -30%)
        z-index 4
      [class|='cir']
        position absolute
        bottom: 0
        left: 50%
        top 80%
        -webkit-border-radius: 50%
        -moz-border-radius: 50%
        border-radius: 50%
        transform translate(-50%, -50%) rotateX(75deg) scale(0.8)
      .cir-1
        width: 500px
        height: 500px
        background-color: #6cb1f6
        z-index 3
        animation zoom1 linear 2s infinite
      .cir-2
        width: 700px
        height: 700px
        background-color: #4387f4
        z-index 2
        animation zoom2 linear 2s infinite
        animation-delay 0.4s
      .cir-3
        width: 900px
        height: 900px
        border: 2px dashed #6cb1f6
        stroke-dasharray: 4;
        stroke-dashoffset: 22;
        z-index 1
        animation zoom3 linear 2s infinite
        animation-delay 0.8s

      .float-tip-1
        position: absolute
        left 25%
        top: 20%
        //animation float ease-in-out 2s infinite
      .float-tip-2
        position: absolute
        left 15%
        bottom: 35%
        //animation float ease-in-out 2s infinite
      .float-tip-3
        position: absolute
        right 25%
        top: 20%
        //animation float ease-in-out 2s infinite
      .float-tip-4
        position: absolute
        right 15%
        bottom: 35%
        //animation float ease-in-out 2s infinite
@keyframes zoom1{
  0% {
    transform translate(-50%, -50%) rotateX(75deg) scale(1.1)
    opacity 0.2
  }
  25% {
    transform translate(-50%, -50%) rotateX(75deg) scale(1.2)
  }
  50% {
    transform translate(-50%, -50%) rotateX(75deg) scale(1.4)
    opacity 0.6
  }
  75% {
    transform translate(-50%, -50%) rotateX(75deg) scale(1.5)
    opacity 0.2
  }
  100% {
    transform translate(-50%, -50%) rotateX(75deg) scale(1.6)
    opacity 0
  }
}
@keyframes zoom2{
  0% {
    transform translate(-50%, -50%) rotateX(75deg) scale(1.2)
    opacity 0.2
  }
  25% {
    transform translate(-50%, -50%) rotateX(75deg) scale(1.3)
  }
  50% {
    transform translate(-50%, -50%) rotateX(75deg) scale(1.4)
    opacity 0.6
  }
  75% {
    transform translate(-50%, -50%) rotateX(75deg) scale(1.5)
    opacity 0.2
  }
  100% {
    transform translate(-50%, -50%) rotateX(75deg) scale(1.6)
    opacity 0
  }
}
@keyframes zoom3{
  0% {
    transform translate(-50%, -50%) rotateX(75deg) rotateZ(0deg) scale(1.2)
    opacity 0.2
  }
  25% {
    transform translate(-50%, -50%) rotateX(75deg) rotateZ(180deg) scale(1.3)
  }
  50% {
    transform translate(-50%, -50%) rotateX(75deg) rotateZ(360deg) scale(1.4)
    opacity 0.4
  }
  75% {
    transform translate(-50%, -50%) rotateX(75deg) rotateZ(360deg) scale(1.5)
    opacity 0.1
  }
  100% {
    transform translate(-50%, -50%) rotateX(75deg) rotateZ(360deg) scale(1.6)
    opacity 0
  }
}
@keyframes float {
  0% {
    transform translateY(0)
  }
  50% {
    transform translateY(20px)
    opacity 0.7
  }
  100% {
    transform translateY(0)
  }
}
