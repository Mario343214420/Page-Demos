@import '../styles/datong-irons-font/iconfont.css'
html, body
  height: 100%
  width: 100%
#app
  height: 100%
  width: 100%
  background-repeat: no-repeat
  background-size: 100% auto
  position relative
  background-color: #f6f9fe
  [flex]
    display flex
  [flex~="space:between"]
    justify-content space-between
  [flex-box~="1"]
    flex: 1
  [bold]
    font-weight: 700
  .bin-form-item-content
    display flex
  .bin-scrollbar__wrap{overflow-x:hidden;}
  .modal-title
    text-align center
    padding-bottom: 20px
    font-size: 18px
    color #8c939d
  .verification-code
    width: 100px
    height: 100%
    text-align center
  .verification-input
    flex 1
  .login-btn
    width: 100%
    display block
  .header
    position absolute
    top: 0
    left: 0
    z-index 10
    width: 100%
    height: 100px
    display flex
    align-items center
    justify-content space-between
    padding-left: 40px
    padding-right: 40px
    border-bottom: 1px solid rgba(255,255,255,0.2)
    background-color: #1349f1
    .login-container
      color #fff
      >span
        a
          color inherit
          position relative
          margin-right: 20px
          .tip
            position absolute
            left: 50%
            bottom: 50%
            background-color: #fd0001
            -webkit-border-radius: 10px
            -moz-border-radius: 10px
            border-radius: 10px
            height: 20px
            line-height: 20px
            padding 0 6px
        .username
          margin 0 20px
  .footer
    position absolute
    display flex
    align-items center
    flex-direction column
    bottom: 0
    left: 0
    width: 100%
    height: 100px
    padding 20px
    box-sizing border-box
    background-color: #e9e9e9
  .main
    padding-top: 100px
    padding-bottom: 100px
    height 100%
    position relative
    .top-bg
      content: ''
      display block
      position absolute
      top: 100px
      left: 0
      height: 120px
      width: 100%
      background-image: url(../images/datong-irons/topbanner.jpg)
      background-size: auto 100%;
      background-position: center 0
    .main-inner
      width 1200px
      margin: 0 auto
      height 100%
      display flex
      flex-direction column
      align-items center
      .search-wrapper
        display flex
        width 800px
        margin 40px auto
        height: 40px
        box-sizing border-box
        .icon-ios-search:before
          content '查询'
          padding-right: 10px
          color #1f7af6
          font-weight: 700
        .bin-input-icon
          width 60px
        .bin-input-search-icon
          height: 40px
          line-height: 40px
          &::after
            position absolute
            left: -10px
            top: 2px
            content: ''
            display block
            width: 1px
            height: 36px
            background-color: #f4f4f4
      .list-wrapper
        padding-top: 20px
        flex: 1
        width: 1200px
        overflow hidden
        padding-bottom: 20px
        .list-inner
          height: 100%
          overflow hidden
          display flex
          -webkit-border-radius: 6px
          -moz-border-radius: 6px
          border-radius: 6px
          background-color: #fff
          .menu-list
            width 260px
            background-color: #f3f4f8
            .menu-item
              display flex
              align-items center
              font-size: 18px
              line-height: 50px
              color #9aa0a6
              height: 50px
              .iconfont
                font-size: 22px
                padding 0 40px
                transform translateY(4px)
              &.active
                font-weight: 700
                background-color: #dfedfa
                color #0289ff
                position relative
                &::after
                  content ''
                  position absolute
                  right: 0
                  top: 0
                  width: 4px
                  height: 100%
                  background-color: #0289ff
          .notice-list
            padding: 20px
            flex: 1
            overflow hidden
            display flex
            flex-direction column
            .title
              font-size: 22px
              line-height: 40px
              height: 60px
              padding-left: 30px
              border-bottom: 1px solid #f0f0f0
            .handle-wrapper
              display flex
              justify-content space-between
              margin 20px 0
              padding-left: 20px
            .page-wrapper
              display flex
              justify-content flex-end
              margin 20px 0
