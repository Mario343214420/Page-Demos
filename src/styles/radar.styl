.mask-radar-container
      position absolute
      left: 1007px;
      top: 342px;
      .mask-inner
        width 330px
        height: 300px
        position relative
        img
          display block
          width: 100%
          height: 100%
          position absolute
          top: 0
          left: 0
          &:nth-child(2)
            animation radar-rotate infinite linear 14.5s
          &:nth-child(3)
            animation radar-rotate-return infinite linear 14s
          &:nth-child(4)
            animation radar-rotate infinite linear 13.5s
          &:nth-child(5)
            animation radar-rotate-return infinite linear 13s
          &:nth-child(6)
            animation radar-rotate infinite linear 12.5s
          &:nth-child(7)
            animation radar-rotate-return infinite linear 12s
          &:nth-child(8)
            animation radar-rotate infinite linear 10s
          &:nth-child(9)
            animation radar-rotate-return infinite linear 9s
          &:nth-child(10)
            animation radar-rotate infinite linear 9s

@keyframes radar-rotate-return{
  0% {transform: rotate(0turn);opacity: 0.6}
  50% {transform: rotate(1turn);opacity: 0.3}
  100% {transform: rotate(0turn);opacity: 0.6}
}
@keyframes radar-rotate{
  0% {transform: rotate(0turn);opacity: 0.6}
  50% {transform: rotate(0.5turn);opacity: 0.3}
  100% {transform: rotate(1turn);opacity: 0.6}
}
