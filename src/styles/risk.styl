@keyframes rotate-cir
  0% { transform: translate(-50%, -50%) scale(0.9) rotateZ(0) }
  50% { transform: translate(-50%, -50%) scale(0.9) rotateZ(0.5turn) }
  100% { transform: translate(-50%, -50%) scale(0.9) rotateZ(1turn) }

@keyframes rotate-cir-reverse
  0% { transform: translate(-50%, -50%) scale(0.95) rotateZ(0) }
  50% { transform: translate(-50%, -50%) scale(0.95) rotateZ(-0.5turn) }
  100% { transform: translate(-50%, -50%) scale(0.95) rotateZ(-1turn) }
