#app
  .bg-container
    background-repeat: no-repeat
    background-image: url(../images/juxian_city/bg-bot-re.png)
    background-position: center bottom
  .association-wrapper
    padding 40px 0 300px
    width: 1200px
    margin: 0 auto;
    .title
      text-align center
      margin: 20px 0;
    .association-container
      display flex
      width 1200px
      overflow hidden
      .item
        overflow hidden
        display flex
        .item-title
          position relative
          p
            position absolute
            color #fff
            top: 60px
            left: 50%
            transform translateX(-50%)
            width 30px
            text-align center
            font-family: KaiTi
            font-size: 24px
        .content
          width: 0
          height: 100%
          overflow hidden
          transition width ease-in-out 0.6s
          box-sizing border-box
          .inner
            width: 560px
            height: 527px
            box-sizing border-box
            padding 20px
            margin: 20px;
            background-repeat: no-repeat
            -webkit-background-size: 100% 100%
            background-size: 100% 100%
            background-image: url(../images/juxian_association/kuang.png)
            .img
              height: 60px
              width: 120px
            p
              line-height: 32px
              padding 20px 10px
          &.w1
            width: 600px
