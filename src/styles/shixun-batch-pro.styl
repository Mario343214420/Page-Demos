.base
  width: 100%
  color #333
  .batch-set-title
    font-size: 22px
    font-weight: 700
    padding-left: 40px
    line-height: 50px
    padding-top: 10px
  .batch-set-container
    padding 15px
    background-color: #f0f2f5;
    .batch-inner
      background-color: #fff
      .batch-title
        padding-left: 30px
        border: 1px solid #f6f6f6
        line-height: 50px
        font-weight: 700
      .batch-form
        overflow hidden
        width: 100%
        padding 20px 0
        .batch-table
          width: 100%
          height: auto
          float left
          line-height: 30px
          .batch-table-title
            border-left: 4px solid #1f7af6
            padding-left: 40px
            margin: 10px 0
          .batch-table-container
            padding-left: 40px
            table
              width 100%
              th
                font-weight: 400
                background-color: #fafafa
                padding 10px 0
              td
                padding: 8px 0
                input
                  padding 6px
                  -webkit-border-radius: 4px
                  -moz-border-radius: 4px
                  border-radius: 4px
                  border: 1px solid #d9d9d9
              .table-index
                text-align center
        .batch-form-item
          width: 50%
          height: 50px
          line-height: 50px
          float left
          box-sizing border-box
          padding-left: 60px
          padding-right: 60px
          font-size: 14px
          overflow hidden
          min-width 508px
          [readonly]
            background-color: #eee
          .select-btn
            -webkit-border-radius: 4px
            -moz-border-radius: 4px
            border-radius: 4px
            line-height: 32px
            padding 5px 10px
            vertical-align middle
            border: 1px solid #d9d9d9
            transition ease-in-out .4s
            &:hover
              background-color: #1f7af6
              color #fff
              cursor pointer
          .modal
            position absolute
            display none
            width: 100px
            height: 100px
            border: 1px solid #000
          &.last
            position relative
            padding-bottom: 17px
            &::after
              content ''
              width: 100%
              display block
              position absolute
              bottom: 0
              background-color: #eeeeee
              height: 1px
          &>select, input
            width 200px
            height: 32px
            -webkit-border-radius: 4px
            -moz-border-radius: 4px
            border-radius: 4px
            border: 1px solid #d9d9d9
            margin: 0 20px
          .form-item-title
            &.is-required
              &::before
                content: '*'
                color #ff4d4f
                padding 0 10px
                display inline-block
          textarea
            resize none
            line-height: 28px
            padding 0 8px
            width: 600px
            -webkit-border-radius: 4px
            -moz-border-radius: 4px
            border-radius: 4px
            border: 1px solid #d9d9d9
            margin: 0 20px
