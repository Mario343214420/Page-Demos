#app
  .cultural-bg
    width: 100%
    padding 60px 0
    background-repeat: no-repeat
    background-position: 0 bottom;
    background-image: url(../images/juxian_cultural/bg_shan.jpg)
  .cultural-wrapper
    width: 1200px
    margin: 0 auto;
    .title
      text-align center
      margin: 30px 0;
    .inner-container
      display flex
      flex-wrap wrap
      .item
        width: 240px
        overflow hidden
        display flex
        flex-direction column
        align-items center
        padding-top: 20px
        .item-title
          text-align center
          width 140px
          background-image: url(../images/juxian_cultural/bg.png)
          background-repeat: no-repeat
          background-size: 100% 100%;
          padding 10px 0
          font-weight: 700
          font-family fangsong
          font-size: 20px
          margin: 30px 0 10px;
        .text
          padding 20px 20px
          line-height: 36px
          font-size: 14px

