.ellipsis
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

[flex]
  display flex
[flex~="between"]
  justify-content space-between
[flex~="around"]
  justify-content space-around
[flex~="column"]
  flex-direction column
[flex~="wrap"]
  flex-wrap wrap
.main-wrapper
  width: 1200px
  margin: 20px auto
  .middle-title
    position relative
    margin 10px 0
    height: 60px
    line-height: 60px
    color #fff
    text-align center
    i
      position relative
      z-index 2
      width: 110px
      display inline-block
      background-image: url(../images/qufu/title_red.png)
      background-repeat: no-repeat
      background-position: center center
      background-color: #fff
    &::after
      z-index 1
      position absolute
      content: ''
      top 50%
      left: 0
      transform translateY(-50%)
      height: 1px
      width: 100%
      display block
      background-color: #df4443
  .swiper-pagination-bullets
    width: auto
    right: 10px
    left: auto
  .font-color-gray
    color #9c9c9c
  .w590px
    width: 590px
  .news-wrapper
    .swiper-slide
      img
        display block
        width: 100%
        height: 340px
      .new-title
        position absolute
        line-height: 36px
        bottom: 0
        z-index 999
        background-color: #00000088
        color #fff
        width: 100%
        box-sizing border-box
        padding-left: 10px
        padding-right: 80px
    .news-content
      .btns-wrapper
        background-color: #f3f6fb
        .btn
          display block
          width 144px
          height: 40px
          -webkit-background-size: cover
          background-size: cover
          text-align center
          line-height: 40px
          cursor pointer
        .active
          background-image: url(../images/qufu/news_bg.jpg)
          color #fff
        .default
          color #818381
      .contents-wrapper
        padding 10px
        .new-item
          font-size: 14px
          .item-more
            color #9c9c9c
            font-weight: 400
            font-size: 14px
            text-align right
            line-height: 30px
            margin-bottom: 10px
          .item-date
            width: 160px
            padding-left: 44px
          &:nth-child(1)
            font-size: 20px
            font-weight: 700
            border-bottom: 1px solid #9c9c9c44
            margin-bottom: 10px
            .item-title
              line-height: 50px
          &:nth-child(n+1)
            line-height: 36px
  .banner-wrapper
    .banner-item
      flex: 1
      padding 30px 10px
      &:first-child
        padding-left: 0
      &:last-child
        padding-right: 0
      a
        display block
      img
        width: 180px
      .title
        text-align center
        line-height: 50px
  .layout-wrapper
    .top-bar
      position relative
      &::after
        content: ''
        display block
        position absolute
        top 50%
        left: 0
        transform translateY(-50%)
        z-index -1
        height: 1px
        width: 100%
        background-color: #df4443
      .btn
        width: 108px
        height: 46px
        text-align center
        line-height: 46px
        display block
        cursor pointer
        margin-right: 20px
        background-color: #fff
        &.active
          color #fff
          background-image: url('../images/qufu/title_red.png')
        &.default
          background-image: url('../images/qufu/title_yellow.png')

      .more-btn
        position absolute
        right: 0
        top: 50%
        padding-left: 20px
        background-color: #fff
        transform translateY(-50%)
    .layout-inner
      width: 100%
      .half-wrapper
        width: 100%
        margin 20px 0
        .half
          width: 48%
          .content-list
            margin 10px 0
            .content-list-item
              line-height: 34px
              font-size: 14px
            .content-info
              width: 70%
    .credit-build
      .credit-links
        height: 520px
    .dept-list
      li
        line-height: 34px
        &.table-title
          font-size: 18px
          font-weight: 700
          line-height: 40px
          background-color: #f7f6f4
        &:nth-child(even)
          background-color: #f6f7fb
        span
          display block
          width 50%
          text-align center
  .link-wrap
    .left
      width: 55%
      a
        height: 100px
    .right
      width: 45%
    a
      display block
      height: 50%
      margin-bottom: 6px
.full-wrapper
  background-color: #fafafa
  padding 20px 0 5px
  .banner-wrapper
    width: 1200px
    margin 0 auto
    .title
      text-align center
      line-height: 40px
  .inner-title
    color #df4442
    line-height: 60px
    font-size: 20px
    font-weight: 700
    border-bottom: 1px solid #dcdcdc
  .full-inner-wrapper
    margin 0 auto
    width: 1200px
  .friend-link
    padding 10px 0
    img
      width: 150px
.footer-wrapper
  padding 30px
  p
    text-align center
    margin 0 auto
    color #fff
    font-size: 14px
    line-height: 30px
