$fontColor = #00d0ff

html, body, #app
  width: 100%
  height: 100%

.num
  font-size: 22px
  color #00bff7
  font-weight: 700
i
  color #fff

#app
  background-color: #040823
  display flex
  flex-direction column
  .top-wrapper
    background-image: url(../../images/luohe/top_bg.jpg)
    height: 60px
    background-size: 100% 100%;
    background-repeat: no-repeat
    p
      text-align center
      color $fontColor
      font-size: 28px
      font-weight: 700
      height: 60px
      line-height: 50px
      letter-spacing 10px
  .main-wrapper
    padding 20px 20px
    flex: 1
    .panel
      overflow hidden
      &:nth-child(1),&:nth-child(3)
        width 26%
      &:nth-child(2)
        width: 48%
        margin 0 20px
      .light-container
        border: 1px solid rgba(70,110,160,0.4)
        box-shadow 0 0 10px inset rgba(70,110,160,0.6)
        &:last-child
          margin-bottom: 0
        .title
          height: 50px
          line-height: 50px
          font-size: 20px
          font-weight: 700
          color $fontColor
          text-align center
        .content
          padding 0 20px 10px
          height:calc(100% - 50px)
          .count-wrapper
            background-image: url('../../images/luohe/tuopan.png')
            background-repeat: no-repeat
            background-position: center bottom
            background-size: 400px 30px;
            width: 100%
            padding-bottom: 20px
            img
              display block
              width: 60px
              height: 50px
            span
              padding 2px 10px 0
              line-height: 24px
              color #fff
              .num
                font-weight: 700
                font-size: 22px
                color #00d0ff

          .num-card
            color #fff
            justify-content center
            margin-bottom: 10px
            .label
              width 90px
            .num
              span
                margin 2px
                padding 0 8px
                font-size: 28px
                text-align center
                background-color: #232e4c
                color $fontColor

          .lv-table
            border-top: 1px solid #151d29
            border-left: 1px solid #151d29
            .row
              color #fff
              .col
                border-right: 1px solid #151d29
                border-bottom: 1px solid #151d29
                flex 1
                font-size: 14px
                text-align center
                line-height: 24px
          .inner-top
            display flex
            width: 100%
            justify-content space-between
            .inner-top-item
              width 24%
              display flex
              height: 100px
              flex-direction column
              justify-content center
              align-items center
              background-color: #041b44
              img
                width: 30px
                height: auto


          .inner-bot
            margin-top: 10px
            .inner-bot-left
              margin-top: 6px
              display flex
              flex-direction column
              align-items center
              width 152px
              justify-content center
              height: 144px
              background-color: #041b44
              img
                width: 40px
                height: auto
            .inner-bot-right
              width: 280px
              height: 150px
              flex-wrap wrap
              justify-content space-around
              .inner-bot-right-item
                background-color: #041b44
                display flex
                flex-direction column
                justify-content center
                align-items center
                margin-top: 6px
                width: 48%
        .center-chart-container
          background-image: url(../../images/luohe/bg.png)
          background-repeat: no-repeat
          -webkit-background-size: 100% 100%
          background-size: 100% 100%
          overflow hidden
          height: calc(100% - 20px)
          padding-top: 40px
          width: 100%
          .inner-bg
            margin: 0 auto
            width 92%
            height: 95%
        .table-wrapper
          padding 10px 20px 20px
        .table-container
          color #fff
          .row
            line-height: 40px
            height: 40px
            &:nth-child(odd)
              background-color: #010a2b
            &:nth-child(even)
              background-color: #121a3f
            .col
              flex 1
              padding-left: 10px
              &:first-child
                width 320px
                flex: none
              &:last-child
                width 80px
                flex: none

.bin-scrollbar__wrap{overflow-x:hidden;}
[flex~='space:around']{
  justify-content space-around
}
.simple-chart
  width: 100%
  height: 214px
.h264px
  height: 264px
