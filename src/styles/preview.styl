@import "../styles/luohe-font/iconfont.css"
[flex]
  display flex
[dir~='top']
  flex-direction column
[flex~='justify:between']
  justify-content space-between
[flex~='justify:around']
  justify-content space-around
[flex~='justify:center']
  justify-content center
[flex~='justify:end']
  justify-content flex-end
[flex~='align:center']
  align-items center
[flex-box~='1']
  flex: 1
#app
  padding: 10px
  background-color: #f6f6f6
  .main
    .top-bar
      .item
        -webkit-border-radius: 6px
        -moz-border-radius: 6px
        border-radius: 6px
        color #333
        background-color: #fff
        padding 20px
        &:not(:last-child)
          margin-right: 20px
        span
          display block
          line-height: 30px
          &:first-child
            text-align center
            margin-right: 30px
            font-weight: 700
            -webkit-border-radius: 50%
            -moz-border-radius: 50%
            border-radius: 50%
            background-color: rgba(255,255,255,0.4)
            $square50 = 50px
            width: $square50
            height: $square50
            line-height: $square50
            color #fff
            i
              font-size: 28px
          &:last-child
            i
              color #7e858f
            .num
              color #333
              font-size: 18px
        &:nth-child(1)
          span
            &:first-child
              background-color: #4065e0
        &:nth-child(2)
          span
            &:first-child
              background-color: #329aef
        &:nth-child(3)
          span
            &:first-child
              background-color: #2bcfcf
        &:nth-child(4)
          span
            &:first-child
              background-color: #6fcafa
    .card-list
      .box-card
        margin-top: 20px
        .content
          .page-wrapper
            padding 10px 20px
            text-align right
          .toggle-wrapper
            margin-bottom: 20px
            .item
              position relative
              background-color: #fafafa
              padding 30px
              cursor pointer
              &:nth-child(2)
                .iconfont
                  color #499df8
              &:nth-child(3)
                .iconfont
                  color #fec300
              &:nth-child(4)
                .iconfont
                  color #499df8
              .iconfont
                font-size: 30px
                margin-right: 30px
              .title
                font-size: 20px
                padding-bottom: 10px
              &.active
                background-color: #0d85ff
                color #fff
                .iconfont
                  color #fff
              &::after
                position absolute
                bottom: 0
                left 50%
                transform translateX(-50%)
                width: 0
                height: 0
                content: ''
                display block
                $bdw = 10px
                border-top: 0 solid #000
                border-left: $bdw solid transparent
                border-right: $bdw solid transparent
                border-bottom: $bdw solid #fafafa

